
<% if flash[:error] %>
  <div class="alert alert-error">Please correct these problems: 
    <ul>
      <li><%= flash[:error] %></li>
    </ul>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="alert alert-error">
    <strong>Please correct these problems:</strong>
    <ul>
      <li><%= flash[:alert] %></li>
    </ul>
  </div>
<% end %>

<% if flash[:notice] %>
  <div class="alert alert-info"><%= flash[:notice] %></div>
<% end %>

<% if flash[:success] %>
  <div class="alert alert-success"><%= flash[:success] %></div>
<% end %>